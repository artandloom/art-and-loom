{
    "version": 2,
    "builds": [
        {
            "src": "api/routes/**/*.js",
            "use": "@now/node"
        },
        {
            "src": "package.json",
            "use": "@now/static-build"
        }
    ],
    "build": {
        "env": {
            "API_URL": "https://monorepo.arukomp.now.sh"
        }
    },
    "routes": [
        {
            "src": "/.nuxt/.+",
            "headers": {
                "cache-control": "s-maxage=31536000"
            }
        },
        {
            "src": "/(.*)",
            "dest": "$1"
        }
    ]
}